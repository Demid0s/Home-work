Програма з повторенням 10 разів


#include <iostream>
#include <string>

using namespace std;
string a;
string b;
int main()
{
   cout << ("Введiте iм`я\n");
   cin>>a;
    cout <<( "Введiте фамiлiю\n");
    cin>>b;
    
    
    
  for (int i=1;i<11;i++)
       {
          printf("%s %s\n",a.c_str(),b.c_str());
        
         
       }
  
   return 0;
}
